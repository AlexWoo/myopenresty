OPENRESTY_PREFIX=
OPENRESTY_USER=
OPENRESTY_FORCE_REINSTALL=no
OPENRESTY_CONFDIR=
OPENRESTY_PACKAGE=

help()
{
cat << END

--help          print this help document

--prefix=PATH   path where ORGINAL openresty install
--user=user     user account to install openresty

--force-reinstall
                igore openresty allready installed

--conf=PATH     config dir for user

--package=GZ| DIR| URL
                openresty installed package

END
}

opt=

for option
do
    case "$option" in
        -*=*) value=`echo "$option" | sed -e 's/[-_a-zA-Z0-9]*=//'` ;;
        *) value="" ;;
    esac

    case $option in
        --help)
            help
            exit 0
        ;;
        --prefix=*)
            OPENRESTY_PREFIX=$value
        ;;
        --user=*)
            OPENRESTY_USER=$value
        ;;
        --force-reinstall)
            OPENRESTY_FORCE_REINSTALL=yes
        ;;
        --conf=*)
            OPENRESTY_CONFDIR=$value
        ;;
        --package=*)
            OPENRESTY_PACKAGE=$value
        ;;
        *)
            echo "invalid option: \"$option\""
            exit 1
        ;;
    esac
done

