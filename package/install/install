NGINXOPTION=" --prefix=$PREFIX \
--with-http_stub_status_module \
--with-http_gzip_static_module \
--with-http_ssl_module \
--with-http_drizzle_module"

if [ $PACKAGETYPE == "link" ];then
    wget $PACKAGE || exit 2
    PACKAGETYPE=file
    PACKAGE=`basename $PACKAGE`
fi

if [ $PACKAGETYPE == "file" ];then              
    tar xzf $PACKAGE || exit 2
    PACKAGETYPE=dir
    PACKAGE=`echo openresty-1.9.7.4.tar.gz| sed "s/\.tar\.gz//"`
fi

if [ $PACKAGETYPE == "dir" ];then
    cd $PACKAGE
    ./configure $NGINXOPTION && gmake && gmake install || exit 2
    cd ..
fi

